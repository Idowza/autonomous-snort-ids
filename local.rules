alert tcp any any -> $HOME_NET 22 (msg:"SSH Brute-Force Attempt"; flow:to_server,established; content:"SSH-", nocase; detection_filter: track by_src, count 5, seconds 60; classtype:attempted-admin; metadata:attack_target Home_Net; sid:1000002; rev:2;)
alert tcp any any -> $HOME_NET any (msg:"Nmap FIN Scan Attempt"; flags:F; flow:stateless; classtype:attempted-recon; metadata:attack_target Home_Net; sid:1000001; rev:2;)
alert icmp any any -> $HOME_NET any (msg:"ICMP Ping Sweep Detected"; flow:stateless; itype:8; icode:0; detection_filter: track by_src, count 2, seconds 10; classtype:attempted-recon; metadata:attack_target Home_Net; sid:1000004; rev:2;)